<div class="container-fluid mt-4">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-file-earmark-binary me-2"></i> {{.FileName}}
            </h5>
            <span class="badge bg-secondary">{{.Type}}</span>
        </div>
        <div class="card-body">
            {{if .Error}}
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> {{.Error}}
            </div>
            {{end}}

            {{if eq .Type "Segment"}}
                {{$seg := .Data}}
                <div class="row mb-3">
                    <div class="col-md-3"><strong>Size:</strong> {{formatBytes $seg.SizeBytes}}</div>
                    <div class="col-md-3"><strong>Batches:</strong> {{len $seg.Batches}}</div>
                    <div class="col-md-3"><strong>Base Offset:</strong> {{$seg.BaseOffset}}</div>
                </div>

                {{if $seg.Batches}}
                <div class="table-responsive">
                    <table class="table table-sm table-hover font-monospace" style="font-size: 0.85rem;">
                        <thead class="table-light">
                            <tr>
                                <th>Offset</th>
                                <th>Type</th>
                                <th>Timestamp</th>
                                <th>Records</th>
                                <th>Size</th>
                                <th>Comp</th>
                                <th>CRC</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{range $seg.Batches}}
                            <tr>
                                <td>{{.BaseOffset}}</td>
                                <td>
                                    <span class="badge {{if eq .TypeString "Raft Data"}}bg-primary{{else if eq .TypeString "Raft Config"}}bg-info{{else}}bg-secondary{{end}}">
                                        {{.TypeString}}
                                    </span>
                                </td>
                                <td>{{.Timestamp.Format "15:04:05.000"}}</td>
                                <td>{{.RecordCount}}</td>
                                <td>{{.BatchLength}}</td>
                                <td>{{.CompressionType}}</td>
                                <td>{{printf "%x" .CRC}}</td>
                                <td>
                                    {{if .RaftConfig}}
                                        <small><strong>Config:</strong> Voters: {{.RaftConfig.Voters}}</small>
                                    {{else if eq .TypeString "Raft Data"}}
                                        <span class="text-muted">Data Batch</span>
                                    {{end}}
                                </td>
                            </tr>
                            {{end}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                    <p class="text-muted text-center py-4">No batches found or parse error.</p>
                {{end}}

            {{else if eq .Type "Snapshot"}}
                {{$snap := .Data.Snapshot}}
                {{if $snap}}
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-bordered">
                            <tr><th>Version</th><td>{{$snap.HeaderVersion}}</td></tr>
                            <tr><th>Last Included Index</th><td>{{$snap.LastIncludedIndex}}</td></tr>
                            <tr><th>Last Included Term</th><td>{{$snap.LastIncludedTerm}}</td></tr>
                            <tr><th>Metadata Size</th><td>{{$snap.MetadataSize}} bytes</td></tr>
                            <tr><th>Header CRC</th><td>{{printf "%x" $snap.HeaderCRC}}</td></tr>
                        </table>
                    </div>
                </div>
                {{end}}
            {{end}}
        </div>
    </div>
</div>